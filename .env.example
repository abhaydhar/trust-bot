# Neo4j connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password-here

# LiteLLM — configure the model you want to use
# See https://docs.litellm.ai/docs/providers for all supported providers
LITELLM_MODEL=gpt-4o
LITELLM_EMBEDDING_MODEL=text-embedding-3-small

# Provider API keys (uncomment the one you need)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# AZURE_API_KEY=...
# AZURE_API_BASE=...

# Codebase root — the directory TrustBot will index and validate against
CODEBASE_ROOT=./sample_codebase

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./data/chromadb

# Logging
LOG_LEVEL=INFO

# Web UI port (change if 7860 is busy)
SERVER_PORT=7860

# Agentic mode: "llm" uses LangChain agents with LLM reasoning (default),
# "rules" uses the original rule-based pipeline (faster, no LLM cost for validation)
TRUSTBOT_AGENTIC_MODE=llm
# TRUSTBOT_LLM_TEMPERATURE=0.1
# TRUSTBOT_LLM_MAX_TOKENS=4096

# Session state persistence (survives laptop lock / tab reopen). Leave empty to disable.
# TRUSTBOT_STORAGE_SECRET=your-random-secret-here
# TRUSTBOT_SESSION_MAX_AGE_DAYS=7
